@using OnlineShop.Models;
@using X.PagedList.Mvc.Core

@model X.PagedList.IPagedList<Products>
@{ ViewData["Title"] = "Home Page"; }
<br />
<br />
<div class="row">
    @foreach (var product in Model)
    {
<div class="col-4 ">
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal">
                <label style="font-size: 23px;color:black">@product.Name</label>
            </h4>
        </div>
        <img src="~/@product.Image" alt="Card Image" class="card-img-top" style="height: 300px;" />
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <label style="font-size: 20px;color:cadetblue"><b>Price : @product.Price</b>$</label>
                </div>
                <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-outline-success pull-right btn-outline-info">Deatils</a>
            </div>
        </div>
    </div>
</div>}
</div>
<div>
    @Html.PagedListPager(Model,generatePageUrl : c=>Href(contentPath:"~/Customer/Home/Index?page=" +c))
</div>


